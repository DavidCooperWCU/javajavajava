    {
	Scanner expected = new Scanner(expectedShapes);
	Scanner actual = new
	    Scanner(getStaticMethodOutputFull("Patterns","main",
					      null));
	boolean passes = true;
	int line = 1;
	while (expected.hasNextLine() &&
	       actual.hasNextLine()) {
	    String expect = expected.nextLine();
